<config>
  <!-- delete vanilla xp bar -->
  <remove xpath="/windows/window[@name='windowToolbelt']/rect/sprite[@depth='2']"/>
  <remove xpath="/windows/window[@name='windowToolbelt']/rect/sprite[@depth='3']"/>
  <remove xpath="/windows/window[@name='windowToolbelt']/rect/sprite[@depth='4']"/>
  <remove xpath="/windows/window[@name='HUDLeftStatBars']"/>
  <!-- new bars -->
  <append xpath="/windows">
    <window name="HUDLeftStatBars">
      <rect name="hud" pos="10,329" rows="7" cols="1" width="200" side="right">
        <rect width="200" height="43" controller="HUDStatBar" stat_type="Stealth" visible="{statvisible}" pos="0,0">
          <filledsprite depth="3" name="background" color="0,0,0,255" width="200" fillcenter="false" type="filled" fill="1"></filledsprite>
          <filledsprite depth="3" name="background" color="110,110,110,128" type="filled" fill="1" width="200"></filledsprite>
          <filledsprite depth="4" name="BarContent" color="{stealthcolor}" type="filled" fill="0" width="200"></filledsprite>
          <filledsprite depth="8" name="background" color="0,0,0,255" width="200" fillcenter="false" type="filled" fill="1"></filledsprite>
          <label depth="6" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{statcurrent}" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,150" height="43" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="5" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" height="43" type="sliced" fillcenter="false"></sprite>
        </rect>
        <rect width="200" height="43" pos="0,-46" controller="PlayerStatsWindow" visible="{statvisible}">
          <filledsprite depth="5" name="BarContent" color="52,174,86" width="200" type="filled" fill="{playerfoodfill}"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playerfood}%" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_fork" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
        <rect width="200" height="43" pos="0,-92" controller="PlayerStatsWindow" visible="{statvisible}">
          <filledsprite depth="5" name="BarContent" color="52,137,167" width="200" type="filled" fill="{playerwaterfill}"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playerwater}%" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_water" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
        <rect width="200" height="43" pos="0,-138" controller="HUDStatBar" stat_type="Stamina" visible="{statvisible}">
          <filledsprite depth="3" name="background" color="0,0,0,255" width="200" fillcenter="false" type="filled" fill="{statmodifiedmax}"></filledsprite>
          <filledsprite depth="3" name="background" color="110,110,110,128" width="200" type="filled" fill="{statmodifiedmax}"></filledsprite>
          <filledsprite depth="5" name="BarContent" color="0,54,255,128" width="200" type="filled" fill="0"></filledsprite>
          <filledsprite depth="8" name="background" color="0,0,0,255" width="200" fillcenter="false" type="filled" fill="{statmodifiedmax}"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{statcurrentwithmax}" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_agility" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
        <rect width="200" height="43" pos="0,-184" controller="HUDStatBar" stat_type="Health" visible="{statvisible}">
          <filledsprite depth="3" name="background" color="0,0,0,255" width="200" fillcenter="false" type="filled" fill="{statmodifiedmax}"></filledsprite>
          <filledsprite depth="3" name="background" color="110,110,110,128" width="200" type="filled" fill="{statmodifiedmax}"></filledsprite>
          <filledsprite depth="5" name="BarContent" color="255,0,0,128" width="200" type="filled" fill="0"></filledsprite>
          <filledsprite depth="8" name="background" color="0,0,0,255" width="200" fillcenter="false" type="filled" fill="{statmodifiedmax}"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{statcurrentwithmax}" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
        <rect width="200" height="43" pos="0,-230" controller="MapStats" visible="{statvisible}">
          <filledsprite depth="5" name="BarContent" color="207,127,41" width="200" type="filled" fill="1"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playercoretemp}[-]" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_temperature" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
        <rect width="200" height="43" pos="0,-276" controller="PlayerStatsWindow" visible="{statvisible}">
          <filledsprite depth="5" name="BarContent" color="49,91,203" width="200" type="filled" fill="{playerlevelfill}"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{playerlevel}" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_trophy" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
      </rect>
      <rect name="hud" pos="220,145" rows="3" cols="1" width="200" side="right">
        <rect width="200" height="43" pos="0,0" controller="MapStats" visible="{statvisible}">
          <filledsprite depth="5" name="BarContent" color="64,64,128" width="200" type="filled" fill="1"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{mapwind} MPH[-]" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_wind" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
        <rect width="200" height="43" pos="0,-46" controller="MapStats" visible="{statvisible}">
          <filledsprite depth="5" name="BarContent" color="207,127,41" width="200" type="filled" fill="1"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{maptemperature}[-]" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_campfire" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
        <rect width="200" height="43" pos="0,-92" controller="MapStats" visible="{statvisible}">
          <filledsprite depth="5" name="BarContent" color="88,55,29" width="200" type="filled" fill="1"></filledsprite>
          <label depth="7" name="TextContent" pos="0,-8" font_size="28" color="[white]" justify="center" pivot="topleft" text="{mapelevation} M[-]" height="30"></label>
          <sprite depth="1" name="border" color="0,0,0,128" type="sliced"></sprite>
          <sprite depth="2" name="background" color="0,0,0,140" type="sliced"></sprite>
          <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_climb" size="32,32" pos="8,-6" foregroundlayer="true"></sprite>
          <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"></sprite>
        </rect>
      </rect>
      <rect name="hud" pos="91,315" side="left" controller="BuffPopoutList" pivot="BottomLeft">
        <panel width="168" height="44" name="item" visible="false" pivot="right" disableautobackground="true" pos="70, 0">
          <sprite depth="3" pos="0,0" name="Background" sprite="ui_game_popup" height="44" width="162" pivot="center" flip="Horizontally" color="[transparent]"></sprite>
          <sprite depth="4" name="Icon" size="36,32" pos="-58,0" pivot="center" color="[transparent]"></sprite>
          <label depth="6" name="TextContent" pos="0,0" font_size="28" color="[white]" justify="center" height="30" pivot="center"></label>
        </panel>
      </rect>
    </window>
  </append>
</config>
